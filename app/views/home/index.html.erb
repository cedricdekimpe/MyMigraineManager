<% content_for :title, "Welcome" %>

<section class="mx-auto flex max-w-2xl flex-col gap-6 text-center">
  <h1 class="text-3xl font-semibold text-slate-900">Track migraines with confidence</h1>
  <p class="text-base leading-relaxed text-slate-600">
    My Migraine Manager keeps your logs, triggers, and relief strategies in one secure place.
    Sign in to continue tracking or create a new account to get started.
  </p>

  <% if user_signed_in? %>
    <div class="flex flex-wrap justify-center gap-3">
      <%= link_to "Update account", edit_user_registration_path, class: "rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:border-slate-400 hover:text-slate-900" %>
    </div>
  <% else %>
    <div class="flex flex-wrap justify-center gap-3">
      <%= link_to "Create an account", new_user_registration_path, class: "rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700" %>
      <%= link_to "Sign in instead", new_user_session_path, class: "rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:border-slate-400 hover:text-slate-900" %>
    </div>
  <% end %>
</section>
