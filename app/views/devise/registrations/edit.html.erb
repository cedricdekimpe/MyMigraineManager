<% content_for :title, t('account.edit_title') %>

<section class="mx-auto flex w-full max-w-4xl flex-col gap-8 lg:flex-row">
  <div class="flex-1 rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
    <header class="mb-6">
      <h1 class="text-2xl font-semibold text-slate-900"><%= t('account.account_info') %></h1>
      <p class="mt-2 text-sm text-slate-500"><%= t('account.update_email_password') %></p>
    </header>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with model: resource, scope: resource_name, url: registration_path(resource_name), method: :put, data: { turbo: false }, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :email, t('account.email'), class: "block text-sm font-medium text-slate-700" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <%= form.label :password, t('account.password'), class: "block text-sm font-medium text-slate-700" %>
          <span class="text-xs text-slate-500"><%= t('account.password_hint') %></span>
        </div>
        <%= form.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="space-y-2">
        <%= form.label :password_confirmation, t('account.password_confirmation'), class: "block text-sm font-medium text-slate-700" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="space-y-2">
        <%= form.label :current_password, t('account.current_password'), class: "block text-sm font-medium text-slate-700" %>
        <%= form.password_field :current_password, autocomplete: "current-password", class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
        <p class="text-xs text-slate-500"><%= t('account.current_password_hint') %></p>
      </div>

      <div class="flex items-center justify-between">
        <%= link_to t('common.back'), root_path, class: "rounded-md border border-transparent px-3 py-2 text-sm font-medium text-slate-600 transition hover:text-slate-800" %>
        <%= form.submit t('account.update_account'), class: "rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
      </div>
    <% end %>
  </div>

  <div class="flex-1 rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
    <header class="mb-6">
      <h2 class="text-xl font-semibold text-slate-900"><%= t('account.medications_title') %></h2>
      <p class="mt-2 text-sm text-slate-500"><%= t('account.medications_description') %></p>
    </header>

    <div class="space-y-4">
      <% if current_user.medications.exists? %>
        <ul class="space-y-3">
          <% current_user.medications.order(:name).each do |medication| %>
            <li class="flex items-center justify-between rounded-lg border border-slate-200 px-4 py-3">
              <div>
                <p class="text-sm font-medium text-slate-900"><%= medication.name %></p>
              </div>
              <%= button_to t('common.delete'), medication_path(medication), method: :delete, data: { turbo_confirm: "#{t('common.delete')} #{medication.name}?" }, class: "rounded-md border border-slate-300 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 transition hover:border-rose-300 hover:text-rose-600" %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="rounded-md border border-dashed border-slate-300 px-4 py-6 text-center text-sm text-slate-500"><%= t('account.no_medications') %></p>
      <% end %>

      <div class="border-t border-slate-200 pt-4">
        <%= form_with model: Medication.new, url: medications_path, data: { turbo: false }, class: "flex flex-col gap-3 sm:flex-row" do |form| %>
          <%= form.label :name, t('account.medication_name'), class: "sr-only" %>
          <%= form.text_field :name, placeholder: t('account.medication_name'), class: "flex-1 rounded-md border border-slate-300 px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
          <%= form.submit t('account.add'), class: "rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="mx-auto mt-8 w-full max-w-4xl rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
  <header class="mb-6">
    <h2 class="text-xl font-semibold text-slate-900"><%= t('account.data_management_title') %></h2>
    <p class="mt-2 text-sm text-slate-500"><%= t('account.data_management_description') %></p>
  </header>

  <div class="grid gap-6 md:grid-cols-2">
    <!-- Export Section -->
    <div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
      <div class="mb-4 flex items-center gap-3">
        <div class="rounded-full bg-emerald-100 p-2">
          <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900"><%= t('account.export_title') %></h3>
      </div>
      <p class="mb-4 text-sm text-slate-600"><%= t('account.export_description') %></p>
      <%= button_to t('account.export_button'), exports_path, 
            method: :post,
            data: { turbo: false },
            class: "w-full rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
    </div>

    <!-- Import Section -->
    <div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
      <div class="mb-4 flex items-center gap-3">
        <div class="rounded-full bg-blue-100 p-2">
          <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-slate-900"><%= t('account.import_title') %></h3>
      </div>
      <p class="mb-4 text-sm text-slate-600"><%= t('account.import_description') %></p>
      <%= link_to t('account.import_button'), new_import_path, 
            class: "block w-full rounded-md border border-blue-600 bg-white px-4 py-2 text-center text-sm font-semibold text-blue-600 transition hover:bg-blue-50" %>
    </div>
  </div>

  <div class="mt-6 rounded-lg border border-amber-200 bg-amber-50 p-4">
    <div class="flex">
      <svg class="h-5 w-5 flex-shrink-0 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <p class="text-sm text-amber-800">
          <strong><%= t('account.backup_warning') %></strong> <%= t('account.backup_text') %>
        </p>
      </div>
    </div>
  </div>
</section>
