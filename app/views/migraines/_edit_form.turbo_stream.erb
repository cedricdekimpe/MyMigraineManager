<div class="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/50" 
     data-controller="modal"
     data-action="click->modal#closeBackground"
     data-modal-target="overlay">
  <div class="mx-4 w-full max-w-2xl rounded-xl border border-slate-200 bg-white p-8 shadow-xl"
       data-modal-target="dialog"
       data-action="click->modal#stopPropagation">
    <header class="mb-6 flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-semibold text-slate-900"><%= t('migraines.edit') %></h2>
        <p class="mt-1 text-sm text-slate-500"><%= l(migraine.occurred_on, format: :long) %></p>
      </div>
      <button type="button" 
              data-action="modal#close"
              class="rounded-md p-2 text-slate-400 transition hover:bg-slate-100 hover:text-slate-600">
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </header>

    <%= render "shared/form_errors", object: migraine %>

    <%= form_with model: migraine, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :nature, t('migraines.nature'), class: "block text-sm font-medium text-slate-700" %>
        <%= form.select :nature, Migraine::NATURE_OPTIONS.map { |value| [t("migraine_nature.#{value}"), value] }, {}, class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="space-y-2">
        <%= form.label :intensity, t('migraines.intensity'), class: "block text-sm font-medium text-slate-700" %>
        <%= form.number_field :intensity, in: 0..10, class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="flex items-center gap-3">
        <%= form.check_box :on_period, class: "h-4 w-4 rounded border-slate-300 text-emerald-600 focus:ring-emerald-500" %>
        <%= form.label :on_period, t('migraines.on_period'), class: "text-sm font-medium text-slate-700" %>
      </div>

      <div class="space-y-2">
        <div class="flex items-center justify-between">
          <%= form.label :medication_id, t('migraines.medication'), class: "block text-sm font-medium text-slate-700" %>
          <%= link_to t('migraines.manage_list'), edit_user_registration_path, class: "text-xs font-medium text-emerald-700 hover:text-emerald-800", target: "_top" %>
        </div>
        <%= form.collection_select :medication_id, medications, :id, :name, { include_blank: t('migraines.none') }, class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
      </div>

      <div class="flex items-center justify-between border-t border-slate-200 pt-6">
        <div>
          <%= button_to t('migraines.delete'), migraine_path(migraine), 
                method: :delete, 
                form: { data: { turbo_confirm: t('migraines.confirm_delete') } },
                class: "rounded-md border border-red-300 bg-white px-4 py-2 text-sm font-medium text-red-600 transition hover:bg-red-50" %>
        </div>
        <div class="flex gap-3">
          <button type="button" 
                  data-action="modal#close"
                  class="rounded-md border border-transparent px-3 py-2 text-sm font-medium text-slate-600 transition hover:text-slate-800">
            <%= t('migraines.cancel') %>
          </button>
          <%= form.submit t('common.save'), class: "rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
