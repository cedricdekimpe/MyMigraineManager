<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4"><%= t('admin.dashboard.title') %></h1>
      <p class="lead text-muted"><%= t('admin.dashboard.subtitle') %></p>
    </div>
  </div>

  <div class="row mt-4">
    <% 
    stats = [
      { model: User, icon: 'fa-users', color: 'primary' },
      { model: Migraine, icon: 'fa-head-side-virus', color: 'danger' },
      { model: Medication, icon: 'fa-pills', color: 'success' }
    ]
    
    stats.each do |stat|
      count = stat[:model].count
      model_name = stat[:model].model_name.human(count: count)
    %>
      <div class="col-md-4 mb-4">
        <div class="card border-<%= stat[:color] %>">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title text-muted mb-0"><%= model_name %></h5>
                <h2 class="mt-2 mb-0"><%= count %></h2>
              </div>
              <div class="text-<%= stat[:color] %> opacity-75">
                <i class="fas <%= stat[:icon] %> fa-3x"></i>
              </div>
            </div>
            <%= link_to t('admin.dashboard.manage'), 
                        main_app.rails_admin_path(model_name: stat[:model].model_name.param_key, action: :index), 
                        class: 'btn btn-sm btn-outline-' + stat[:color] + ' mt-3' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><%= t('admin.dashboard.quick_actions') %></h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <%= link_to rails_admin.index_path(model_name: 'user'), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
              <span><i class="fas fa-users me-2"></i><%= User.model_name.human(count: 2) %></span>
              <span class="badge bg-primary rounded-pill"><%= User.count %></span>
            <% end %>
            <%= link_to rails_admin.index_path(model_name: 'migraine'), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
              <span><i class="fas fa-head-side-virus me-2"></i><%= Migraine.model_name.human(count: 2) %></span>
              <span class="badge bg-danger rounded-pill"><%= Migraine.count %></span>
            <% end %>
            <%= link_to rails_admin.index_path(model_name: 'medication'), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
              <span><i class="fas fa-pills me-2"></i><%= Medication.model_name.human(count: 2) %></span>
              <span class="badge bg-success rounded-pill"><%= Medication.count %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
